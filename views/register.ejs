<!doctype html>
<html>
  <head>
    <title>Register for <%= shopData.shopName %></title>
    <link rel="stylesheet" type="text/css" href="/main.css" />
  </head>

  <body>
    <h1>Register for <%= shopData.shopName %></h1>

    <!-- Validation errors -->
    <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
      <ul>
        <% errors.forEach(function(error) { %>
          <li style="color:red;"><%= error.msg %></li>
        <% }); %>
      </ul>
    <% } %>

    <form method="POST" action="/users/registered">
        
        <p>First name: 
          <input id="first" type="text" name="first" required />
        </p>

        <p>Last name: 
          <input id="last" type="text" name="last" required />
        </p>

        <p>Email: 
          <input id="email" type="email" name="email" required />
        </p>

        <p>Username: 
          <input id="username" type="text" name="username" required />
        </p>

        <p>Password: 
          <input id="password" type="password" name="password" required />
          <br>
          <small>Password must be at least 8 characters</small>
        </p>

        <input type="submit" value="Register" />
    </form>

    <p><a href="/">Back to home</a></p>

  </body>
</html>
